# 自动激活py313 conda环境
# 需要安装direnv: brew install direnv (macOS)

# 检查并激活conda环境
if command -v conda >/dev/null 2>&1; then
    # 初始化conda
    eval "$(conda shell.bash hook)"

    # 激活py313环境
    conda activate py313

    echo "✓ 已自动激活py313环境"
else
    echo "⚠️  conda未找到，请确保已安装Anaconda"
fi

# 设置项目相关环境变量
export DJANGO_SETTINGS_MODULE=hualiEdu.settings
export PYTHONPATH="${PWD}:${PYTHONPATH}"
