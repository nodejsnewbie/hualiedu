# Django设置
DJANGO_SETTINGS_MODULE=hualiEdu.settings
DEBUG=0
SECRET_KEY=change-this-to-a-secure-secret-key
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# 数据库设置
MYSQL_ROOT_PASSWORD=change-this-to-secure-password
MYSQL_DATABASE=huali_edu
MYSQL_USER=huali_user
MYSQL_PASSWORD=change-this-to-secure-password

# 邮件设置（可选）
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# 静态文件设置
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media

# 安全设置
CSRF_TRUSTED_ORIGINS=https://your-domain.com
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True 